doctype
html
    head
        title E-mail client
        link(rel="stylesheet", href="/lib/bootstrap-3.3.6-dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/lib/bootstrap-3.3.6-dist/css/bootstrap-theme.min.css")
        link(rel="stylesheet", href="/css/font-awesome.min.css")
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/site.css")
        base( href="/")
        block angular-scripts
    body(ng-app="myApp")
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false")
                        span(class="sr-only" > Toggle navigation)
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a.navbar-brand(href="/") HOME
                .collapse.navbar-collapse#navbar-collapse-1
                    ul.nav.navbar-nav.navbar-right
                        if (currentUser)
                            li.dropdown
                                a.dropdown-toggle(href="", data-toggle="dropdown")
                                    |  #{currentUser.username}
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/settings") Settings
                            li
                                a(href="/logout") Logout
                        else
                            li
                                a(href="/register") Register
                            li
                                a(href="/login") Login

        .container-fluid
            if (errorMessage)
                div.alert.alert-danger !{errorMessage}

            if (successMessage)
                div.alert.alert-success !{successMessage}

            block main-content

        footer

        include scripts