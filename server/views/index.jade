extends shared/layout
block main-content
   div(clas="page-content")
      div#tab-general
         div(class="row mbl")
            div(class="col-lg-12")
               div(class="col-md-12")
            div(class="col-lg-12")
               div(class="row")
                  div(class="col-sm-3 col-md-2")
                  div(class="col-sm-9 col-md-10")
                     button(type="button" data-toggle="tooltip" title="Refresh" class="btn btn-default mls mrs")
                        span(class="fa fa-refresh")
                     div(class="pull-right")
                        span(class="text-muted")
                           b 1
                           | &nbsp; â€“ &nbsp;
                           b 50
                           | &nbsp; of &nbsp;
                           b 277
                        div(class="btn-group mlm")
                           button(type="button" class="btn btn-default")
                              span(class="fa fa-chevron-left")
                           button(type="button" class="btn btn-default")
                              span(class="fa fa-chevron-right")
               div(class="mtl mbl")
               div(class="row")
                  div(class="col-sm-3 col-md-2")
                     a(href="#/compose", role="button", class="btn btn-danger btn-sm btn-block") COMPOSE
                     div(class="mtm mbm")
                     div(class="panel" ng-controller="HomeController as vm")
                        div(class="panel-body pan")
                           ul(style="background: #fff" class="nav nav-pills nav-stacked")
                              li(ng-class="{active : vm.activeMenu === 'Inbox'}" ng-click="vm.activeMenu = 'Inbox'")
                                 a(href="#/home")
                                    span(class="badge pull-right") 42
                                    i(class="fa fa-inbox fa-fw mrs")
                                    |&nbsp;Inbox
                              li(ng-class="{active : vm.activeMenu === 'Outbox'}" ng-click="vm.activeMenu = 'Outbox'")
                                 a(href="#/outbox")
                                    span(class="badge  pull-right")
                                    i(class="fa fa-inbox fa-fw mrs")
                                    | &nbsp;Outbox
                              li(ng-class="{active : vm.activeMenu === 'Drafts'}" ng-click="vm.activeMenu = 'Drafts'")
                                 a(href="#/drafts")
                                    span(class="badge  pull-right") 3
                                    i(class="fa fa-inbox fa-fw mrs")
                                    | &nbsp;Drafts
                              li(ng-class="{active : vm.activeMenu === 'Spam'}" ng-click="vm.activeMenu = 'Spam'")
                                 a(href="#/spam")
                                    span(class="badge pull-right") 256
                                    i(class="fa fa-inbox fa-fw mrs")
                                    | &nbsp;Spam
                  div(class ="col-sm-9 col-md-10" ng-view)


